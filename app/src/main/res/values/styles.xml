<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="carCardLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/car_elements_margin</item>
        <item name="android:layout_marginStart">@dimen/car_elements_margin</item>
    </style>

    <style name="carCardTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/car_elements_margin</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subscriptionOpportunity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">@dimen/car_elements_margin</item>
        <item name="android:textColor">@color/peachColor</item>
    </style>
</resources>